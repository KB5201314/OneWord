        android:label="@string/app_name"
        android:persistent="true"
        android:supportsRtl="true"
        android:theme="@style/BaseTheme">
        <activity
            android:name=".application.client.activity.MainActivity"
            android:screenOrientation="portrait">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>


        <service
            android:name=".application.client.service.OneWordAutoRefreshService"
            android:enabled="true"
            android:exported="false"
            android:isolatedProcess="false"
            android:label="@string/service_name"
            android:priority="1000"
            android:process=":autorefresh">

        </service>

        <receiver android:name=".systemui.receiver.BootCompletedBroadCastReceiver">
