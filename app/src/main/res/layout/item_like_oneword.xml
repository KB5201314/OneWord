<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="@dimen/item_oneword_height">

    <!-- this view reveals when swipe right -->
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/item_oneword_r"
        android:padding="14dp"
        android:tag="reveal-right"
        android:visibility="gone">


        <ImageView
            android:id="@+id/item_set"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_centerVertical="true"
            android:layout_marginRight="8dp"
            android:src="@drawable/ic_done_white_48dp"
            android:tint="@color/item_oneword_icons_like" />

        <ImageView
            android:id="@+id/item_share"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_toRightOf="@+id/item_set"
            android:src="@drawable/ic_share_white_48dp"
            android:tint="@color/item_oneword_icons_like" />


    </RelativeLayout>


    <!-- this view reveals when swipe left -->
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/item_oneword_l"
        android:padding="14dp"
        android:tag="reveal-left"
        android:visibility="gone">

        <ImageView
            android:id="@+id/item_delete"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:src="@drawable/ic_delete_white_48dp"
            android:tint="@color/item_oneword_icons_delete" />
    </RelativeLayout>


    <!-- this is the item front view -->
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="?attr/colorPrimary"
        android:padding="@dimen/item_oneword_padding"
        android:tag="front">

        <TextView
            android:id="@+id/item_oneword_msg"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:singleLine="false"
            android:textColor="@android:color/white"
            android:textSize="16dp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/item_oneword_from"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/item_oneword_msg"
            android:layout_marginTop="3dp"
            android:gravity="right"
            android:textColor="@android:color/white"
            android:textSize="14dp"
            android:textStyle="italic" />
    </RelativeLayout>


    <!-- just a divider -->
    <View
        android:layout_width="fill_parent"
        android:layout_height="0.5dp"
        android:background="?attr/colorPrimaryDark" />

</FrameLayout>